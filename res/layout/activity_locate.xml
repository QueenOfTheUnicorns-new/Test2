




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/f_map1">


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_1"
        android:textSize="30sp"
        android:id="@+id/level_1"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_2"
        android:textSize="30sp"
        android:id="@+id/level_2"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="410dp"
        android:layout_marginTop="20dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_3"
        android:textSize="30sp"
        android:id="@+id/level_3"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="655dp"
        android:layout_marginTop="20dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_4"
        android:textSize="30sp"
        android:id="@+id/level_4"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="170dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_5"
        android:textSize="30sp"
        android:id="@+id/level_5"/>


    <Button
        android:textColor="@color/TextWhite"
        android:id="@+id/level_6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="410dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/rounded"
        android:text="@string/f_6"
        android:textSize="30sp" />


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_7"
        android:textSize="30sp"
        android:id="@+id/level_7"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="320dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_8"
        android:textSize="30sp"
        android:id="@+id/level_8"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="410dp"
        android:layout_marginTop="320dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_9"
        android:textSize="30sp"
        android:id="@+id/level_9"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_marginLeft="655dp"
        android:layout_marginTop="320dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rounded"
        android:text="@string/f_10"
        android:textSize="30sp"
        android:id="@+id/level_10"/>


    <Button
        android:textColor="@color/TextWhite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Л"
        android:layout_alignParentRight="true"
        android:id="@+id/go_improve_hero"
        android:layout_alignParentEnd="true"
        android:background="@drawable/f_sheild_skills"/>
</RelativeLayout>










